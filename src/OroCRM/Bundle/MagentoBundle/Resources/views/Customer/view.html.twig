{% extends 'OroUIBundle:actions:view.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as macros %}

{% set fullname = entity|oro_format_name|default('N/A'|trans) %}
{% oro_title_set({params : {"%customer.name%": fullname} }) %}

{% block navButtons %}
    {% set createOrder = 'orocrm.magento.customer.create_order'|trans %}
    {{
        UI.clientButton({
            'dataUrl': path('orocrm_magento_customer_orderplace', {'id': entity.id }),
            'aCss':    'no-hash',
            'iCss':    'icon-money',
            'dataId':  entity.id,
            'title' : createOrder,
            'label' : createOrder,
            'widget' : {
                'type' : 'dialog',
                'options' : {
                    'alias':               'transaction-dialog',
                    'stateEnabled':        false,
                    'incrementalPosition': true,
                    'loadingMaskEnabled':  false,
                    'dialogOptions' : {
                        'dialogClass':   'place-order-transaction-dialog',
                        'title' :        createOrder,
                        'allowMaximize': true,
                        'allowMinimize': false,
                        'width':         1000,
                        'height':        600,
                        'modal':         true,
                        'autoResize':    true
                    }
                }
            }
        })
    }}
    {{ parent() }}
{% endblock navButtons %}

{% block pageHeader %}
    {% set breadcrumbs = {
        'entity': entity,
        'indexPath': path('orocrm_magento_customer_index', {id: entity.channel.id}),
        'indexLabel': 'orocrm.magento.customer.entity_plural_label'|trans,
        'entityTitle': fullname
    } %}
    {{ parent() }}
{% endblock pageHeader %}

{% block content_data %}
    {% set customerInformationWidget %}
        {{ oro_widget_render({
            'widgetType': 'block',
            'url':         path('orocrm_magento_customer_info', {id: entity.id})
        }) }}
    {% endset %}

    {% set generalSubBlocks = [{'data' : [customerInformationWidget]}] %}

    {% if entity.addresses.count is not sameas(0) %}
        {% set customerAddressBookWidget %}
            <div class="responsive-cell">
                    {{ oro_widget_render({
                    'widgetType': 'block',
                    'contentClasses': [],
                    'url': path('orocrm_magento_customer_address_book', {id: entity.id}),
                    'title': 'Address Book'|trans
                }) }}
            </div>
        {% endset %}
        {% set generalSubBlocks = generalSubBlocks|merge([{'data': [customerAddressBookWidget]}]) %}
    {% endif %}

    {% set dataBlocks = [
        {
            'title': 'General Information'|trans,
            'class': 'active',
            'subblocks': generalSubBlocks
        }
    ] %}

    {% set id = 'magentoCustomerView' %}
    {% set data = {'dataBlocks': dataBlocks} %}
    {{ parent() }}
{% endblock content_data %}
