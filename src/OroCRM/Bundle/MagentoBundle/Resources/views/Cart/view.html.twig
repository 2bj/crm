{% extends 'OroUIBundle:actions:view.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as macros %}
{% import 'OroAddressBundle:Include:viewMacro.html.twig' as addressView %}
{% import 'OroDataGridBundle::macros.html.twig' as dataGrid %}

{% block pageHeader %}
    {% set breadcrumbs = {
        'entity': entity,
        'indexPath': path('orocrm_magento_cart_index'),
        'indexLabel': 'Cart'|trans,
        'entityTitle': 'Cart'
    } %}
    {{ parent() }}
{% endblock pageHeader %}

{% block content_data %}
    {% set id = 'navbarCartView' %}
    {% set dataSubBlocks = [
        {
            'title': null,
            'data': [
                oro_widget_render({
                    'widgetType': 'block',
                    'url':         path('orocrm_cart_widget_info', {id: entity.id}),
                    'template':   '<div class="row-fluid <%= contentClasses.join(\' \') %>"></div>'
                })
            ]
        }
    ] %}

    {% if entity.shippingAddress %}
        {% set dataSubBlocks = dataSubBlocks|merge([{
            'title': 'Shipping Address',
            'data' : [ addressView.renderAddress(entity.shippingAddress) ]
        }]) %}
    {% endif %}

    {% if entity.billingAddress %}
        {% set dataSubBlocks = dataSubBlocks|merge([{
            'title': 'Billing Address',
            'data' : [ addressView.renderAddress(entity.billingAddress) ]
        }]) %}
    {% endif %}

    {% set dataBlocks =
        [
            {
                'title': 'Cart Information'|trans,
                'class': 'active',
                'subblocks': dataSubBlocks
            },
            {
                'title': 'Workflow Items'|trans,
                'subblocks': [
                    {
                        'title': null,
                        'data': [
                            oro_widget_render({
                                'widgetType': 'block',
                                'url': path('oro_workflow_widget_workflow_items', {entityClass: oro_class_name(entity), entityId: entity.id}),
                                'alias': 'bind_workflow_items'
                            })
                        ]
                    }
                ]
            },
            {
                'title': 'Customer Information'|trans,
                'subblocks': [
                    {
                        'title': null,
                        'data': [
                            oro_widget_render({
                                'widgetType': 'block',
                                'url':         path('orocrm_magento_customer_info', {id: entity.customer.id})
                            })
                        ]
                    }
                ]
            },
            {
                'title': 'Cart Items'|trans,
                'subblocks': [
                    {
                        'title': null,
                        'data': [
                            oro_widget_render({
                                'widgetType': 'block',
                                'contentClasses': [],
                                'url': path('orocrm_cart_widget_items', {id: entity.id}),
                                'template': '<div class="row-fluid <%= contentClasses.join(\' \') %>"></div>'
                            })
                        ]
                    }
                ]
            }
        ]
    %}

    {% set data = {'dataBlocks': dataBlocks} %}
    {{ parent() }}
{% endblock content_data %}
