{% extends 'OroUIBundle:actions:view.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as macros %}
{% import 'OroDataGridBundle::macros.html.twig' as dataGrid %}
{% set gridName = 'magento-cartitem-grid' %}
{% set params = {} %}

{% block pageHeader %}
    {% set breadcrumbs = {
        'entity': entity,
        'indexPath': path('orocrm_magento_cart_index'),
        'indexLabel': 'Cart'|trans,
        'entityTitle': 'Cart'
    } %}
    {{ parent() }}
{% endblock pageHeader %}

{% block content_data %}
    <div class="contact-info-col-set well-small dark-bg">
        <div class="clearfix">
            <div class="responsive-cell contact-info-col">
                <div class="clearfix row-fluid">
                    <div class="span12 contact-info-col">
                        {{
                            oro_widget_render({
                                'widgetType': 'block',
                                'url':         path('orocrm_magento_cart_info', {id: entity.id}),
                                'title':      'Cart Information'|trans
                            })
                        }}
                    </div>
                </div>
                <div class="clearfix row-fluid">
                    <div class="span12 contact-info-col">
                        {{
                            oro_widget_render({
                                'widgetType': 'block',
                                'url': path('oro_workflow_widget_workflow_items', {entityClass: oro_class_name(entity), entityId: entity.id}),
                                'title': 'Workflow Items',
                                'alias': 'bind_workflow_items'
                            })
                        }}
                    </div>
                </div>
            </div>
            <div class="responsive-cell contact-info-col">
                {{
                    oro_widget_render({
                        'widgetType': 'block',
                        'url':         path('orocrm_magento_customer_info', {id: entity.customer.id}),
                        'title':      'Customer Information'|trans
                    })
                }}
            </div>
        </div>

        <div class="clearfix">
            <div class="responsive-cell contact-info-col">
                <div class="box-type1">
                    <div class="title">Cart items</div>
                    <div class="row-fluid form-horizontal">
                        {{ dataGrid.renderGrid(gridName, params) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock content_data %}
