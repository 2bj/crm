{% extends 'OroUIBundle:actions:update.html.twig' %}
{% form_theme form with ['OroFormBundle:Form:fields.html.twig'] %}

{% oro_title_set({params : {"%report.name%": entity.name} }) %}
{% set formAction = form.vars.value.id ? path('orocrm_report_update', { 'id': form.vars.value.id }) : path('orocrm_report_create')  %}

{% block head_script %}
    {{ parent() }}

    {% block stylesheets %}
        {{ form_stylesheet(form) }}
    {% endblock %}
{% endblock %}

{% block navButtons %}
    {% if form.vars.value.id and resource_granted('orocrm_report_delete') %}
        {{ UI.deleteButton({
            'dataUrl': path('oro_api_delete_report', {'id': form.vars.value.id}),
            'dataRedirect': path('orocrm_report_index'),
            'aCss': 'no-hash remove-button',
            'id': 'btn-remove-report',
            'dataId': form.vars.value.id,
            'dataMessage': 'Are you sure you want to delete this report?'|trans,
            'successMessage': 'orocrm.report.controller.report.deleted'|trans,
            'title': 'Delete report',
            'label': 'Delete'
        })
        }}
        {{ UI.buttonSeparator() }}
    {% endif %}
    {{ UI.button({'path' : path('orocrm_report_index'), 'title' : 'Cancel'|trans, 'label' : 'Cancel'|trans}) }}
    {{ UI.saveAndStayButton('orocrm_report_update') }}
    {{ UI.saveAndCloseButton() }}
{% endblock %}

{% block pageHeader %}
    {% if form.vars.value.id %}
        {% set breadcrumbs = {
            'entity':      form.vars.value,
            'indexPath':   path('orocrm_contact_index'),
            'indexLabel': 'Reports'|trans,
            'entityTitle': entity.name
        }
        %}
        {{ parent() }}
    {% else %}
        {% include 'OroUIBundle::page_title_block.html.twig' %}
    {% endif %}
{% endblock pageHeader %}

{% block content_data %}
    {% set id = 'report-profile' %}

    {% set ownerDataBlock = {
        'dataBlocks': [{
            'subblocks': [{
                'data': []
            }]
        }]
    }
    %}
    {% set ownerDataBlock = oro_form_process(ownerDataBlock, form) %}

    {% set dataBlocks = [{
            'title': 'General'|trans,
            'class': 'active',
            'useSubBlockDivider': false,
            'subblocks': [
                {
                    'title': 'Report Information'|trans,
                    'spanClass': 'report-general',
                    'data': [
                        form_row(form.name, {'label': 'Name'|trans}),
                        form_row(form.entity, {'label': 'Entity'|trans}),
                        form_row(form.type, {'label': 'Type'|trans}),
                        ownerDataBlock.dataBlocks[0].subblocks[0].data[0]
                    ]
                },
                {
                    'title': '',
                    'spanClass': 'report-general-descr',
                    'data': [
                        form_row(form.description, {'label': 'Description'|trans})
                    ]
                }
            ]
        }]
    %}

    {% set dataBlocks = dataBlocks|merge(
        [{
            'title' : 'Designer'|trans,
            'subblocks': [
                {
                    'title': 'Columns'|trans,
                    'spanClass': 'report-columns span6',
                    'data': [
                        '<div class="add-column-form">',
                        form_row(form.field.name, {'label': 'Column'|trans}),
                        form_row(form.field.label, {'label': 'Label'|trans}),
                        form_row(form.field.sorting, {'label': 'Sorting'|trans}),
                        UI.clientButton({
                            'aCss': 'no-hash btn-primary add-column-button',
                            'title' : 'Add'|trans,
                            'label' : 'Add'|trans
                        }),
                        '</div>',
                        block('report_columns_data')
                    ]
                },
                {
                    'title': 'Filters'|trans,
                    'spanClass': 'report-filters span6',
                    'data': [
                        form_row(form.filter.fieldName, {'label': 'Column'|trans}),
                        UI.clientButton({
                            'aCss': 'no-hash btn-primary add-filter-button',
                            'title' : 'Add'|trans,
                            'label' : 'Add'|trans
                        })
                    ]
                },
            ]
        }]
    )
    %}

    {% set data =
        {
            'formErrors': form_errors(form)? form_errors(form) : null,
            'dataBlocks': dataBlocks,
        }
    %}


    {{ UI.scrollData(id, data, form) }}

    <script type="text/javascript">
        require(['jquery', 'underscore', 'oro/query-designer'],
        function($, _, QueryDesigner) {
            var options = {
                columnsOptions: {
                    el: '.report-columns',
                    containerSelector: '.column-container',
                    itemTemplateSelector: '#template-report-column-row',
                    itemFormSelector: '.add-column-form'
                }
            };
            $(function() { new QueryDesigner(options).render(); });
        });
    </script>
{% endblock content_data %}

{% block report_columns_data %}
    <div class="grid-container">
        <table class="grid table-hover table table-bordered table-condensed" style="display: table;">
            <thead>
            <tr>
                <th><span>{{ 'Column'|trans }}</span></th>
                <th><span>{{ 'Label'|trans }}</span></th>
                <th><span>{{ 'Sorting'|trans }}</span></th>
                <th><span>{{ 'Actions'|trans }}</span></th>
            </tr>
            </thead>
            <tbody class="column-container">
            </tbody>
        </table>
    </div>

    <script type="text/html" id="template-report-column-row">
        <tr data-id="<%= id %>">
            <td class="string-cell"><%- name %></td>
            <td class="string-cell"><%- label %></td>
            <td class="sorting-cell"><%- sorting %></td>
            <td class="action-cell">
            {{
                UI.deleteButton({
                    'aCss': 'no-hash remove-column-button',
                    'dataMessage': 'Are you sure you want to delete this column?',
                    'successMessage': 'Column deleted',
                    'title': 'Delete column',
                    'label': 'Delete'
                })
            }}
            </td>
        </tr>
    </script>
{% endblock report_columns_data %}
