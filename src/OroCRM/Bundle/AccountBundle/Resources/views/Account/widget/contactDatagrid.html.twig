<div class="widget-content">
    {% set gridId = "entity-grid-" ~ random() %}

    {% include 'OroGridBundle:Include:javascript.html.twig' with {'datagridView': datagrid, 'selector': '#' ~ gridId} %}
    {% include 'OroGridBundle:Include:stylesheet.html.twig' %}

    <div class="container-fluid">
        {% block content %}
            <div id="{{ gridId }}"></div>
        {% endblock %}
    </div>

    <div class="widget-actions">
        <button type="reset" class="btn">{{ 'Cancel'|trans }}</button>
        <button type="button" class="btn btn-primary">{{ 'Select'|trans }}</button>
    </div>
</div>