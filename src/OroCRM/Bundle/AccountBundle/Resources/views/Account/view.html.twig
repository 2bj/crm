{% extends 'OroUIBundle:actions:view.html.twig' %}

{% oro_title_set({params : {"%account.name%": entity.name|default('N/A')} }) %}
{% set audit_entity_class = 'OroCRM_Bundle_AccountBundle_Entity_Account' %}

{% block navButtons %}
    {% if resource_granted('EDIT', entity) %}
        {{ UI.editButton({
            'path': path('orocrm_account_update', {'id': entity.id}),
            'entity_label': 'orocrm.account.entity_label'|trans
        }) }}
    {% endif %}
    {% if resource_granted('DELETE', entity) %}
        {{ UI.deleteButton({
            'dataUrl': path('oro_api_delete_account', {'id': entity.id}),
            'dataRedirect': path('orocrm_account_index'),
            'aCss': 'no-hash remove-button',
            'dataId': entity.id,
            'id': 'btn-remove-account',
            'entity_label': 'orocrm.account.entity_label'|trans
        }) }}
    {% endif %}

    {% set html %}
        {% placeholder orocrm_account_action_dropdown with {'entity': entity} %}
    {% endset %}

    {{ UI.dropdown({
        'label': 'orocrm.account.account_actions'|trans,
        'html': html
    }) }}
{% endblock navButtons %}

{% block pageHeader %}
    {% set breadcrumbs = {
        'entity': entity,
        'indexPath': path('orocrm_account_index'),
        'indexLabel': 'orocrm.account.entity_plural_label'|trans,
        'entityTitle': entity.name|default('N/A')
    } %}
    {{ parent() }}
{% endblock pageHeader %}

{% block stats %}
    <li>{{ 'orocrm.account.created_at.label'|trans }}: {{ entity.createdAt ? entity.createdAt|oro_format_datetime : 'N/A' }}</li>
    <li>{{ 'orocrm.account.updated_at.label'|trans }}: {{ entity.updatedAt ? entity.updatedAt|oro_format_datetime : 'N/A' }}</li>
{% endblock stats %}

{% block content_data %}
    {% set accountInformationWidget %}
        {{ oro_widget_render({
            'widgetType': 'block',
            'title': 'orocrm.account.widgets.account_information'|trans,
            'url': path('orocrm_account_widget_info', {id: entity.id})
        }) }}
    {% endset %}

    {% set dataBlocks = [
        {
            'title': 'orocrm.account.sections.general'|trans,
            'class': 'active',
            'subblocks': [
                {'data' : [accountInformationWidget]}
            ]
        }
    ] %}

    {% set accountSalesSection %}
        {% set tabs = [] %}

        {% set tabs = tabs|merge(
            [{
                'alias': 'orocrm_account_widget_leads',
                'widgetType': 'block',
                'url': path('orocrm_account_widget_leads', {id: entity.id}),
                'label': 'orocrm.account.widgets.leads'|trans,
            }]
        ) %}

        {% set tabs = tabs|merge(
            [{
                'alias': 'orocrm_account_widget_opportunities',
                'widgetType': 'block',
                'url': path('orocrm_account_widget_opportunities', {id: entity.id}),
                'label': 'orocrm.account.widgets.opportunities'|trans
            }]
        ) %}

        {% set tabs = tabs|merge(
            [{
                'alias': 'orocrm_account_widget_orders',
                'widgetType': 'block',
                'url': path('orocrm_account_widget_orders', {id: entity.id}),
                'label': 'orocrm.account.widgets.account_orders'|trans
            }]
        ) %}

        {{ UI.tabPanel(tabs) }}
    {% endset %}

    {% set dataBlocks = dataBlocks|merge([
        {
            'title': 'orocrm.account.sections.sales'|trans,
            'subblocks': [
                {'data' : [accountSalesSection]}
            ]
        }
    ]) %}

    {% set accountActivitySection %}
        {% set tabs = {} %}

        {% if resource_granted('orocrm_call_view') %}
            {% set tabs = tabs|merge(
                [{
                    'alias': 'account_calls',
                    'label': 'orocrm.call.entity_plural_label'|trans,
                    'widgetType': 'block',
                    'url': path('orocrm_call_widget_calls', {accountId: entity.id})
                }]
            ) %}
        {% endif %}

        {% if resource_granted('oro_email_view') %}
            {% set tabs = tabs|merge(
                [{
                    'alias': 'account_emails',
                    'label': 'oro.email.entity_plural_label'|trans,
                    'widgetType': 'block',
                    'url': path('orocrm_account_widget_emails', {id: entity.id})
                }]
            ) %}
        {% endif %}

        {{ UI.tabPanel(tabs) }}
    {% endset %}
    {% set dataBlocks = dataBlocks|merge([
        {
            'title': 'orocrm.account.sections.activity'|trans,
            'subblocks': [
                {'data' : [accountActivitySection]}
            ]
        }
    ]) %}

    {% for channel in channels %}
        {% set accountCustomersInfoWidget %}
            {% set placeHolderName = 'orocrm_account_customers_info_' ~ channel.type %}

            {{ placeholder(placeHolderName, {'id': entity.id, 'channelId':channel.id}) }}
        {% endset %}
        {% if accountCustomersInfoWidget|trim is not empty %}
            {% set dataBlocks = dataBlocks|merge([
                {
                    'title': channel.name,
                    'subblocks': [
                        {'data' : [accountCustomersInfoWidget]}
                    ]
                }
            ]) %}
        {% endif %}
    {% endfor %}

    {% set id = 'accountView' %}
    {% set data = {'dataBlocks': dataBlocks} %}

    {{ parent() }}

{% endblock content_data %}
