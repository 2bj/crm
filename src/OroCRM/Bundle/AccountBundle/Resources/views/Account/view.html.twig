{% extends 'OroUIBundle:actions:view.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as macros %}
{% import 'OroTagBundle::macros.html.twig' as _tag %}
{% import 'OroAddressBundle:Include:viewMacro.html.twig' as addressView %}
{% import 'OroDataGridBundle::macros.html.twig' as dataGrid %}
{% oro_title_set({params : {"%account.name%": entity.name|default('N/A')} }) %}
{% set audit_entity_class = 'OroCRM_Bundle_AccountBundle_Entity_Account' %}

{% block navButtons %}
    {% if resource_granted('orocrm_contact_create') %}
        {{ UI.button({
            'path': path('orocrm_contact_create', {'account': entity.id}),
            'iClass': 'icon-user',
            'title': 'Add'|trans ~ ' ' ~ 'orocrm.contact.entity_label'|trans|lower,
            'label': 'Add'|trans ~ ' ' ~ 'orocrm.contact.entity_label'|trans|lower
        }) }}
    {% endif %}
    {% if resource_granted('orocrm_account_update') %}
        {{ UI.button({
            'path': path('orocrm_account_update', {'id': entity.id}),
            'iClass': 'icon-edit',
            'title': 'Edit'|trans ~ ' ' ~ 'orocrm.account.entity_label'|trans,
            'label': 'Edit'|trans
        }) }}
    {% endif %}
    {% if resource_granted('orocrm_account_remove') %}
        {{ UI.deleteButton({
                'dataUrl': path('oro_api_delete_account', {'id': entity.id}),
                'dataRedirect': path('orocrm_account_index'),
                'aCss': 'no-hash remove-button',
                'dataId': entity.id,
                'id': 'btn-remove-account',
                'entity_label': 'orocrm.account.entity_label'|trans
        }) }}
    {% endif %}
{% endblock navButtons %}

{% block pageHeader %}
    {% set breadcrumbs = {
        'entity': entity,
        'indexPath': path('orocrm_account_index'),
        'indexLabel': 'orocrm.account.entity_plural_label'|trans,
        'entityTitle': entity.name|default('N/A')
    } %}
    {{ parent() }}
{% endblock pageHeader %}

{% block stats %}
    <li>{{ 'orocrm.account.created_at.label'|trans }}: {{ entity.createdAt ? entity.createdAt|oro_format_datetime : 'N/A' }}</li>
    <li>{{ 'orocrm.account.updated_at.label'|trans }}: {{ entity.updatedAt ? entity.updatedAt|oro_format_datetime : 'N/A' }}</li>
{% endblock stats %}

{% block content_data %}
    {% set id = 'navbarAccountsUpdate' %}
    {% set dataSubBlocks = [UI.attibuteRow('orocrm.account.name.label', entity.name)] %}
    {% if resource_granted('oro_tag_view_tag_cloud') %}
        {% set dataSubBlocks = dataSubBlocks|merge([UI.renderAttribute('oro.tag.entity_plural_label', _tag.renderView(entity))]) %}
    {% endif %}

    {% set dataBlocks =
        [
            {
                'title': 'General'|trans,
                'class': 'active',
                'subblocks': [
                    {
                        'title': 'Basic Information'|trans,
                        'data' : dataSubBlocks
                    }
                ]
            }
        ]
    %}

    {% set accountAddresses = [] %}
    {%  if entity.billingAddress is not empty %}
        {% set accountAddresses = accountAddresses|merge([{'title': 'orocrm.account.billing_address.label'|trans, 'data': [addressView.renderAddress(entity.billingAddress)]}]) %}
    {% endif %}
    {%  if entity.shippingAddress is not empty %}
        {% set accountAddresses = accountAddresses|merge([{'title': 'orocrm.account.shipping_address.label'|trans, 'data': [addressView.renderAddress(entity.shippingAddress)]}]) %}
    {% endif %}

    {% if (accountAddresses|length) %}
        {% set dataBlocks = dataBlocks|merge([{'title' : 'Addresses'|trans, 'subblocks': accountAddresses}])%}
    {% endif %}

    {#
        EntityExtend fields START
    #}
    {% set additional = [ ] %}
    {% set additional_fields = [ ] %}
    {% macro attibuteRow(title, value) %}
        {% import 'OroUIBundle::macros.html.twig' as UI %}
        {% macro attribute_data(value) %}
            <div class="clearfix-oro">
                <p class="control-label">{{ value|raw }}</p>
            </div>
        {% endmacro %}
        {{ UI.renderAttribute(title, _self.attribute_data(value)) }}
    {% endmacro %}
    {% if dynamic|length %}
        {% for label, item in dynamic %}
            {% if item is iterable %}
                {% set data = '' %}
                {% for value in item.values %}
                    {% if value.link is defined and value.link != false  %}
                        {% set data = data ~ '<a href="' ~ value.link ~ '">' ~ value.title ~ '</a>' %}
                    {% else %}
                        {% set data = data ~ value.title %}
                    {% endif %}
                    {% if not loop.last %}
                        {% set data = data ~ ', ' %}
                    {% endif %}
                {% endfor %}
                {% set item = data %}
            {% endif %}

            {% set additional = additional|merge([_self.attibuteRow(label|trans, item)]) %}
        {% endfor %}

        {% if additional|length %}
            {% set col = 2 %}
            {% set attributes = {} %}
            {% set half = (additional|length / col)|ceil %}

            {% for value in additional %}
                {% set attributes = attributes | merge([value]) %}
                {% if loop.index % half == 0  and not loop.last %}
                    {% set additional_fields = additional_fields|merge([{'title' : null, 'data' : attributes}]) %}
                    {% set attributes = {} %}
                {% endif %}
            {% endfor %}

            {% set additional_fields = additional_fields|merge([{'title' : null, 'data' : attributes}]) %}
        {% endif %}

        {% set dataBlocks = dataBlocks|merge([ {
            'title': 'Additional Information',
            'subblocks': additional_fields
        }] ) %}
    {% endif %}
    {#
        EntityExtend fields END
    #}

    {% set dataBlocks = dataBlocks|merge([{
        'title' : 'orocrm.account.contacts.label'|trans,
        'subblocks': [
            {
                'title' : null,
                'data' : [dataGrid.renderGrid('account-contacts-view-grid', {account: entity.id}, { cssClass: 'inner-grid' })],
                'useSpan': false
            }
        ]
    }]) %}

    {% if resource_granted('orocrm_call_view') %}
        {% set dataBlocks = dataBlocks|merge([{
            'title' : 'orocrm.call.entity_plural_label'|trans,
            'subblocks': [
                {
                    'title' : null,
                    'data' : [
                        oro_widget_render({
                            'widgetType': 'buttons',
                            'url': path('orocrm_call_widget_calls', {accountId: entity.id}),
                            'alias': 'account_calls',
                            'cssClass': 'inner-grid',
                        })
                    ],
                    'useSpan': false
                }
            ]
        }]) %}
    {% endif %}

    {% set data = {'dataBlocks': dataBlocks} %}
    {{ parent() }}
{% endblock content_data %}
