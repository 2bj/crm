{% extends 'OroUIBundle:actions:view.html.twig' %}

{% block stats %}
{% endblock stats %}

{% block pageHeader %}
    {% set breadcrumbs = {
        'entity': entity,
        'indexPath': path('orocrm_b2c_shopping_cart_index'),
        'indexLabel': 'Shopping Carts'|trans,
        'entityTitle': 'Shopping Cart #' ~ entity.id
    } %}
    {{ parent() }}
{% endblock pageHeader %}

{% block content_data %}
    <div class="contact-info-col-set well-small dark-bg">
        <div class="clearfix">
            <div class="responsive-cell contact-info-col">
                <div class="form-horizontal box-content row-fluid box-type1">
                    <div class="responsive-block">
                        <div class="title">
                            Shopping Cart Information
                        </div>
                        <div class="row-fluid" style="padding: 15px">
                            <b>Status:</b> {{ entity.status }}
                            <br />
                            <b>Customer:</b> {{ entity.customer }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="responsive-cell contact-info-col">
                {{
                    oro_widget_render({
                        'widgetType': 'block',
                        'url': path('oro_workflow_widget_workflow_items', {entityClass: oro_class_name(entity), entityId: entity.id}),
                        'title': 'Workflow Items',
                        'alias': 'bind_workflow_items'
                    })
                }}
            </div>
        </div>
    </div>
{% endblock content_data %}
