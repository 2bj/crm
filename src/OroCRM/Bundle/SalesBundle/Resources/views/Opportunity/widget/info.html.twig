{% import 'OroUIBundle::macros.html.twig' as macros %}

<style>
    .opportunity-info {
        min-height: 200px;
    }
</style>

<div class="widget-content opportunity-info form-horizontal box-content row-fluid">

    <div class="responsive-block">
        {{ macros.renderProperty('orocrm.sales.opportunity.name.label'|trans, entity.name) }}
        {{ macros.renderProperty('orocrm.sales.opportunity.status.label'|trans, entity.status) }}

        {%- if resource_granted('orocrm_contact_view') and entity.contact -%}
            {% set contactView = '<a href="' ~ path('orocrm_contact_view', {'id': entity.contact.id}) ~ '">' ~ entity.contact|oro_format_name ~ '</a>' %}
        {%- else -%}
            {% set contactView = entity.contact ? entity.contact|oro_format_name : '' %}
        {%- endif -%}

        {{ macros.renderProperty('orocrm.sales.opportunity.contact.label'|trans, contactView) }}

        {%- if resource_granted('orocrm_account_view') and entity.account -%}
            {% set accountView = '<a href="' ~ path('orocrm_account_view', {'id': entity.account.id}) ~ '">' ~ entity.account.__toString() ~ '</a>' %}
        {%- else -%}
            {% set accountView = entity.account ? entity.account.__toString() : '' %}
        {%- endif -%}

        {{ macros.renderProperty('orocrm.sales.opportunity.account.label'|trans, accountView) }}
        {{ macros.renderProperty('orocrm.sales.opportunity.probability.label'|trans, entity.probability|length ? entity.probability|oro_format_percent : '') }}
        {{ macros.renderProperty('orocrm.sales.opportunity.budget_amount.label'|trans, entity.budgetAmount|length ? entity.budgetAmount|oro_format_currency, '') }}

        {% if dynamic|length %}
            {% for label, item in dynamic %}
                {% if item is iterable %}
                    {% set data = '' %}
                    {% for value in item.values %}
                        {% if value.link is defined and value.link != false  %}
                            {% set data = data ~ '<a href="' ~ value.link ~ '">' ~ value.title ~ '</a>' %}
                        {% else %}
                            {% set data = data ~ value.title %}
                        {% endif %}
                        {% if not loop.last %}
                            {% set data = data ~ ', ' %}
                        {% endif %}
                    {% endfor %}

                    {% set item = data %}
                {% endif %}
                {{ macros.renderProperty(label|trans, item) }}
            {% endfor %}
        {% endif %}
    </div>
    <div class="responsive-block">
        {{ macros.renderProperty('orocrm.sales.opportunity.customer_need.label'|trans, entity.customerNeed) }}
        {{ macros.renderProperty('orocrm.sales.opportunity.proposed_solution.label'|trans, entity.proposedSolution) }}
        {{ macros.renderProperty('orocrm.sales.opportunity.close_reason.label'|trans, entity.closeReason) }}
        {{ macros.renderProperty('orocrm.sales.opportunity.close_revenue.label'|trans, entity.closeRevenue|length ? entity.closeRevenue|oro_format_currency, '') }}
        {{ macros.renderProperty('orocrm.sales.opportunity.close_date.label'|trans, entity.closeDate ? entity.closeDate|oro_format_date : '') }}
        {{ macros.renderProperty('orocrm.sales.opportunity.notes.label'|trans, entity.notes|nl2br) }}
    </div>
</div>
