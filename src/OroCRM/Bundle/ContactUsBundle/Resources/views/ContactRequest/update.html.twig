{% extends 'OroUIBundle:actions:update.html.twig' %}

{% set formAction = form.vars.value.id ? path('orocrm_contact_request_update', { 'id': form.vars.value.id }) : path('orocrm_contact_request_create') %}

{% block navButtons %}
    {% if form.vars.value.id %}
        {{ UI.deleteButton({
            'dataUrl': path('orocrm_contact_request_delete', {'id': form.vars.value.id}),
            'dataRedirect': path('orocrm_contact_request_index'),
            'aCss': 'no-hash remove-button',
            'id': 'btn-remove-contact-request-form',
            'dataId': form.vars.value.id,
            'entity_label': 'oro.contact_request.entity.label'|trans,
        }) }}
        {{ UI.buttonSeparator() }}
    {% endif %}
    {{ UI.button({'path' : path('orocrm_contact_request_index'), 'title' : 'Cancel'|trans, 'label' : 'Cancel'|trans}) }}
    {{ UI.saveAndStayButton() }}
    {{ UI.saveAndCloseButton() }}
{% endblock %}

{% block pageHeader %}
    {% if form.vars.value.id %}
        {% set breadcrumbs = {
            'entity':      form.vars.value,
            'indexPath':   path('orocrm_contact_request_index'),
            'indexLabel': 'orocrm.contact_request.entity.plural_label'|trans,
            'entityTitle': form.vars.value.name
        } %}
        {{ parent() }}
    {% else %}
        {% include 'OroUIBundle::page_title_block.html.twig' %}
    {% endif %}
{% endblock pageHeader %}

{% block content_data %}
    {% set id = 'contact-request-form' %}

    {% set dataBlocks = [{
        'title': 'General'|trans,
        'class': 'active',
        'subblocks': [
            {
                'title': 'orocrm.contact_request.form'|trans,
                'data': [
                    form_row(form.name),
                    form_row(form.email),
                    form_row(form.phone),
                    form_row(form.comment)
                ]
            }
        ]
    }] %}

    {% set data = {
        'formErrors': form_errors(form)? form_errors(form) : null,
        'dataBlocks': dataBlocks,
    } %}
    {{ parent() }}
{% endblock content_data %}