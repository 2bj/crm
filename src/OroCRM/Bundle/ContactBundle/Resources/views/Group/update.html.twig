{% extends 'OroUIBundle:actions:update.html.twig' %}
{% form_theme form with 'OroUIBundle:Form:fields.html.twig' %}
{% set title = form.vars.value.id ? form.vars.value.name|default('N/A') : 'Add Customer Group'|trans %}
{% if form.vars.value.id %}
    {% oro_title_set({params : {"%group.name%": form.vars.value.name} }) %}
{% endif %}
{% set gridId = 'contacts-grid' %}
{% set formAction = form.vars.value.id ? path('orocrm_contact_group_update', { id: form.vars.value.id }) : path('orocrm_contact_group_create') %}
{% block head_script %}
    {{ parent() }}

    {% set listenerParameters = {} %}
    {% if showContactsGrid %}
        {% set listenerParameters = {
            'columnName': 'has_group',
            'selectors': {
                'included': '#groupAppendContacts',
                'excluded': '#groupRemoveContacts'
            }
        }
    %}

    {% placeholder prepare_grid with {'datagrid': datagrid, 'selector': '#' ~ gridId, 'parameters': listenerParameters} %}

    {% endif %}
{% endblock %}

{% block navButtons %}
    {% if form.vars.value.id and resource_granted('orocrm_contact_group_delete') %}
        {{ UI.deleteButton({
                'dataUrl': path('oro_api_delete_contactgroup', {'id': form.vars.value.id}),
                'dataRedirect': path('orocrm_contact_group_index'),
                'aCss': 'no-hash remove-button',
                'id': 'btn-remove-contact-group',
                'dataId': form.vars.value.id,
                'dataMessage': 'Are you sure you want to delete this group?',
                'title': 'Delete Group',
                'label': 'Delete'
            })
        }}
        {{ UI.buttonSeparator() }}
    {% endif %}
    {{ UI.button({'path' : path('orocrm_contact_group_index'), 'title' : 'Cancel', 'label' : 'Cancel'}) }}
    {{ UI.buttonType({'type': 'submit', 'class': 'btn-success', 'label': 'Save'}) }}
{% endblock navButtons %}

{% block pageHeader %}
    {% if form.vars.value.id %}
        {% set breadcrumbs = {
            'entity':      form.vars.value,
            'indexPath':   path('orocrm_contact_group_index'),
            'indexLabel': 'Contact Groups',
            'entityTitle': form.vars.value.name|default('N/A'),
            'hasAvatar':   false,
        }
        %}
        {{ parent() }}
    {% else %}
        {% include 'OroUIBundle::page_title_block.html.twig' %}
    {% endif %}
{% endblock pageHeader %}

{% block content_data %}
    {% set id = 'contact-group-profile' %}

    {% set dataBlocks = [{
            'title': 'General',
            'class': 'active',
            'subblocks': [
                {
                    'title': 'Basic Information',
                    'data': [
                        form_row(form.name)
                    ]
                }
            ]
        }]
    %}
    {% if showContactsGrid %}
        {% set dataBlocks = dataBlocks|merge(
            [{
                'title' : 'Contacts',
                'subblocks':
                [
                    {
                        'title' : null,
                        'useSpan': false,
                        'data' : [
                            form_widget(form.appendContacts, {'id': 'groupAppendContacts'}),
                            form_widget(form.removeContacts, {'id': 'groupRemoveContacts'}),
                            UI.gridBlock(gridId)
                        ]
                    }
                ]
            }]
        )
        %}
    {% endif %}
    {% set data =
        {
            'formErrors': form_errors(form)? form_errors(form) : null,
            'dataBlocks': dataBlocks,
            'hiddenData': form_rest(form)
        }
    %}
    {{ parent() }}
{% endblock content_data %}
