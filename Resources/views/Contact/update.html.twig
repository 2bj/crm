{% extends 'OroContactBundle::layout.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as macros %}
{% form_theme form with 'OroAddressBundle:Include:fields.html.twig' %}

{% block head_script %}
    {{ parent() }}

    {% javascripts
    '@OroUIBundle/Resources/public/lib/bootstrap/js/bootstrap-scrollspy.js'
    '@OroUIBundle/Resources/public/lib/backbone.bootstrap-modal.js'

    filter='?yui_js'
    output='js/oro.contact.js'
    %}
    <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}

    {% include 'OroAccountBundle:Account:remove.confirm.js.twig' %}
{% endblock %}

{% block form_buttons %}
    <div class="pull-left customer-info-top-actions">
        <div class="btn-group">
            <a href="{{ app.request.get('back') ? app.request.get('back') : path('oro_contact_index') }}" class="btn back">{{ 'Cancel'|trans }}</a>
            <button type="submit" class="btn btn-primary"><i class="icon-ok icon-white hide-text">Save </i> {{ 'Save'|trans }}</button>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="container-fluid">
    <form action="{{ form.vars.value.id ? path('oro_contact_update', { id: form.vars.value.id, back: app.request.get('back') }) : path('oro_contact_create', { back: app.request.get('back') }) }}" {{ form_enctype(form) }} method="post">
        <div class="navigation clearfix navbar-extra navbar-extra-right">
            <div class="row">
                {% if form.vars.value.id %}
                    <div class="pull-right">
                        <div class="pull-right">
                            <div class="pull-left btn-group icons-holder">
                                {% if resource_granted('oro_contact_delete') %}
                                    <a href="javascript: void(0);" class="btn icons-holder-text remove-button"
                                       data-url="{{ path('oro_api_delete_contact', {'id': form.vars.value.id}) }}"
                                       data-redirect="{{ path('oro_contact_index') }}"
                                       data-message="{{ 'Are you sure you want to delete this contact?'|trans }}"
                                       title="{{ 'Delete Contact'|trans }}"><i class="icon-trash hide-text"></i>{{ 'Delete'|trans }}</a>
                                {% endif %}
                            </div>
                            {{ block('form_buttons') }}
                        </div>
                    </div>
                    <div class="pull-left">
                        <div class="customer-info well-small">
                            <div class="customer-content pull-left">
                                <div class="clearfix-oro">
                                    <div class="sub-title">{{ 'Contact'|trans }}</div>
                                    <span class="separator">/</span>
                                    <h1 class="usser-name">{{ entity.first_name ~ ' ' ~ entity.last_name|default('N/A') }}</h1>
                                </div>
                                <ul class="inline">
                                    <li>{{ 'Created'|trans }}: {{ form.vars.value.createdAt ? macros.time(form.vars.value.createdAt) : 'N/A' }}</li>
                                    <li>{{ 'Updated'|trans }}: {{ form.vars.value.updatedAt ? macros.time(form.vars.value.updatedAt) : 'N/A' }}</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="pull-right">
                        <div class="pull-right">
                            {{ block('form_buttons') }}
                        </div>
                    </div>
                    <div class="pull-left">
                        <div class="customer-info well-small">
                            <div class="customer-content">
                                <h1 class="usser-name">{{ 'New Contact'|trans }}</h1>
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
        <div class="layout-content">
            <div id="navbarExample" class="navbar navbar-static scrollspy-nav">
                <div class="navbar-inner">
                    <div class="container-fluid" style="width: auto;">
                        <ul class="nav">
                            <li class="active"><a href="#scroll-main">{{ 'Overview'|trans }}</a></li>

                            {% if form.groups is defined %}
                                <li><a href="#scroll-groups">{{ 'Groups'|trans }}</a></li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </div>

            <div class="clearfix-oro">
                {% if form_errors(form) %}
                    <div class="customer-info-actions container-fluid well-small">
                        <div class="pull-left alert alert-error">
                            <button class="close" type="button" data-dismiss="alert">Ã—</button>
                            {{ form_errors(form) }}
                        </div>
                    </div>
                {% endif %}
                <div data-spy="scroll" data-target="#navbarExample" data-offset="50" class="scrollspy container-fluid">
                    {% if form.values is defined %}
                        <h4 id="scroll-main" class="scrollspy-title">{{ 'Overview'|trans }}</h4>
                        <div class="row-fluid">
                            <fieldset class="form-horizontal" id="attributes-list">
                                {{ form_row(form.values) }}
                            </fieldset>
                        </div>
                    {% endif %}

                    {% if form.groups is defined %}
                        <div class="usser-row">
                            <h4 id="scroll-groups" class="scrollspy-title">{{ 'Groups'|trans }}</h4>
                            <div class="row-fluid">
                                <fieldset class="form-horizontal">
                                    {{ form_row(form.groups, { attr: { class: 'horizontal' } }) }}
                                </fieldset>
                            </div>
                        </div>
                    {% endif %}

                    <div class="hide">
                        {{ form_rest(form) }}
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
{% endblock content %}
