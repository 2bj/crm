{% extends 'OroContactBundle::layout.html.twig' %}

{% block head_script %}
    {{ parent() }}

    {% include 'OroGridBundle:Include:javascript.html.twig' with {'datagridView': datagrid, 'selector': '#contacts-grid'} %}
    {% include 'OroGridBundle:Include:stylesheet.html.twig' %}
{% endblock %}

{% block content %}
    <div class="container-fluid">
        <h1>
            {{ 'Contacts'|trans }}
            <div class="pull-right">
                <a class="btn" href="{{ path('oro_contact_group_index') }}">{{ 'Manage groups'|trans }}</a>
                <a class="btn btn-primary" href="{{ path('oro_contact_create', {back: app.request.uri}) }}">{{ 'Add contact'|trans }}</a>
            </div>
        </h1>
        <div id="contacts-grid"></div>
    </div>
{% endblock %}
