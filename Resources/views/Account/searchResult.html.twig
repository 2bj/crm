{#
    Available variables:
    * entity       - user entity Oro\Bundle\AccountBundle\Entity\Account
    * indexer_item - indexer item Oro\Bundle\SearchBundle\Query\Result\Item
#}
{% set account = entity %}
{% set format = get_user_value('oro_user.name_format') %}

{% import 'OroUIBundle::macros.html.twig' as macros %}

<div class="customer-info well-small">
    {% if account %}
        <div class="visual">
            <a href="{{ indexer_item.recordUrl }}">
                <img src="{{ asset('bundles/oroui/img/info-usser.png') }}" alt="{{ account.name(format) }}"/>
            </a>
        </div>
        <div class="clearfix">
            <div class="pull-right">
                <div class="sub-title">{{ 'Account'|trans }}</div>
            </div>
            <div class="customer-content pull-left">
                <div class="clearfix">
                    <div class="pull-left">
                        <h1 class="usser-name">
                            <a href="{{ indexer_item.recordUrl }}">{{ account.name(format)|default('N/A') }}</a>
                        </h1>
                    </div>
                </div>
                <div class="clearfix">
                    <ul class="inline">
                        <li>{{ 'Created'|trans }}: {{ account.createdAt ? macros.time(account.createdAt) : 'N/A' }}</li>
                        <li>{{ 'Updated'|trans }}: {{ account.updatedAt ? macros.time(account.updatedAt) : 'N/A' }}</li>
                    </ul>
                </div>
            </div>
        </div>
    {% else %}
        <div class="visual">
            <img src="{{ asset('bundles/oroui/img/info-usser.png') }}" alt="{{ indexer_item.recordTitle }}"/>
        </div>
        <div class="clearfix">
            <div class="pull-right">
                <div class="sub-title">{{ 'Account'|trans }}</div>
            </div>
            <div class="customer-content pull-left">
                <div class="clearfix">
                    <div class="pull-left">
                        <h1 class="usser-name">
                            {{ indexer_item.recordTitle }}
                        </h1>
                    </div>
                </div>
                <div class="clearfix">
                    <ul class="inline">
                        <li>{{ 'Created'|trans }}: N/A</li>
                        <li>{{ 'Updated'|trans }}: N/A</li>
                    </ul>
                </div>
            </div>
        </div>
    {% endif %}
</div>

