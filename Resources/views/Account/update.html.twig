{% extends 'OroAccountBundle::layout.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as macros %}
{% form_theme form with 'OroAddressBundle:Include:fields.html.twig' %}
{% set format = get_user_value('oro_user.name_format') %}
{% set title = form.vars.value.id ? form.vars.value.fullname(format)|default('N/A') ~ ' - ' ~ 'Update Account'|trans : 'New Account'|trans %}
{% oro_title_set({params : {"%account.name%": form.vars.value.name|default('N/A')} }) %}

{% block head_script %}
    {{ parent() }}

    {% javascripts
    '@OroUIBundle/Resources/public/lib/bootstrap/js/bootstrap-scrollspy.js'
    '@OroUIBundle/Resources/public/lib/backbone.bootstrap-modal.js'

    filter='?yui_js'
    output='js/oro.account.account.js'
    %}
    <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}

    {% include 'OroAccountBundle:Account:remove.confirm.js.twig' %}

    {# TODO: Move this to ticker symbol Flexible type #}
    <script type="text/javascript">
        $(function() {
            var cache = {};
            $("#oro_account_form_attributes_7_varchar").typeahead({
                source: function (request, process) {
                    YAHOO = {
                        Finance: {
                            SymbolSuggest: {
                                ssCallback: function (data) {
                                    var result = $.map(data.ResultSet.Result, function (item) {
                                        return item.name + " (" + item.symbol + ")";
                                    });
                                    $.each(data.ResultSet.Result, function (itemKey, item) {
                                        cache[item.name + " (" + item.symbol + ")"] = item.symbol;
                                    });
                                    process(result)
                                }
                            }
                        }
                    };
                    $.ajax({
                        type: "GET",
                        dataType: "jsonp",
                        jsonp: "callback",
                        jsonpCallback: "YAHOO.Finance.SymbolSuggest.ssCallback",
                        data: {
                            query: request
                        },
                        cache: true,
                        url: "http://autoc.finance.yahoo.com/autoc"
                    });
                },
                updater: function(item) {
                    if (typeof cache[item] != 'undefined') {
                        return cache[item];
                    } else {
                        return item;
                    }
                }
            });
        });
    </script>
{% endblock %}

{% block form_buttons %}
    {% if form.vars.value.id and resource_granted('oro_account_account_remove') %}
    <div class="pull-left btn-group icons-holder">
        <a href="javascript: void(0);" class="btn icons-holder-text remove-button" id="btn-remove-account"
           data-id="{{ form.vars.value.id }}"
           data-url="{{ path('oro_api_delete_account', {'id': form.vars.value.id}) }}"
           data-redirect="{{ path('oro_account_index') }}"
           data-message="{{ 'Are you sure you want to delete this account?'|trans }}"
           title="{{ 'Delete account'|trans }}"><i class="icon-trash hide-text">{{ 'Remove'|trans }}</i>Delete</a>
    </div>
    {% endif %}
    <div class="pull-left">
        <div class="separator-btn"></div>
    </div>
    <div class="pull-left customer-info-top-actions">
        <div class="btn-group">
            <a href="{{ app.session.get('back') ? app.session.get('back') : path('oro_account_index') }}" class="btn back">{{ 'Cancel'|trans }}</a>
        </div>
        <button type="submit" class="btn btn-success">{{ ' Save'|trans }}</button>
    </div>
{% endblock %}

{% block content %}
    <div class="container-fluid">
    <form action="{{ form.vars.value.id ? path('oro_account_update', { id: form.vars.value.id, back: app.session.get('back') }) : path('oro_account_create', { back: app.session.get('back') }) }}" {{ form_enctype(form) }} method="post" data-collect="true">
        <div class="navigation clearfix navbar-extra">
            <div class="row">
                <div class="pull-right">
                    <div class="pull-right">
                        {{ block('form_buttons') }}
                    </div>
                </div>
                {% if form.vars.value.id %}
                    <div class="pull-left">
                        <div class="customer-info well-small">
                            <div class="visual"><img src="{{ asset('bundles/oroui/img/info-usser.png') }}" alt="{{ form.vars.value.name(format) }}"/></div>
                            <div class="customer-content pull-left">
                                <div class="clearfix-oro">
                                    <div class="sub-title">{{ 'Account'|trans }}</div>
                                    <span class="separator">/</span>
                                    <h1 class="usser-name">{{ form.vars.value.name|default('N/A') }}</h1>
                                </div>
                                <ul class="inline">
                                    <li>{{ 'Created'|trans }}: {{ form.vars.value.createdAt ? macros.time(form.vars.value.createdAt) : 'N/A' }}</li>
                                    <li>{{ 'Updated'|trans }}: {{ form.vars.value.updatedAt ? macros.time(form.vars.value.updatedAt) : 'N/A' }}</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="pull-left">
                        <div class="customer-info well-small">
                            <div class="customer-content">
                                <h1 class="usser-name">{{ title }}</h1>
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
        <div class="layout-content">
            <div id="navbarExample" class="navbar navbar-static scrollspy-nav">
                <div class="navbar-inner">
                    <div class="container-fluid" style="width: auto;">
                        <ul class="nav">
                            <li class="active"><a href="#scroll-main">{{ 'Overview'|trans }}</a></li>
                            {% if form.values is defined %}
                                <li><a href="#scroll-attributes">{{ 'Additional Data'|trans }}</a></li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </div>

            <div class="clearfix">
                {% if form_errors(form) %}
                    <div class="customer-info-actions container-fluid well-small">
                        <div class="pull-left alert alert-error">
                            <button class="close" type="button" data-dismiss="alert">Ã—</button>
                            {{ form_errors(form) }}
                        </div>
                    </div>
                {% endif %}
                <div data-spy="scroll" data-target="#navbarExample" data-offset="50" class="scrollspy container-fluid">
                    <div class="usser-row">
                        <h4 id="scroll-main" class="scrollspy-title">{{ 'Overview'|trans }}</h4>
                        <div class="row-fluid row-fluid-divider">
                            <fieldset class="form-horizontal span6">
                                <h5 class="usser-fiedset"><span>{{ 'Basic Information'|trans }}</span></h5>
                                {{ form_row(form.name) }}
                            </fieldset>

                            <fieldset class="form-horizontal span6">
                                <h5 class="usser-fiedset"><span>Contact Information</span></h5>
                            </fieldset>
                        </div>
                    </div>

                    {% if form.values is defined %}
                    <div class="usser-row">
                        <h4 id="scroll-attributes" class="scrollspy-title">{{ 'Additional Data'|trans }}</h4>
                        <div class="row-fluid">
                            <fieldset class="form-horizontal" id="attributes-list">
                                {{ form_row(form.values) }}
                            </fieldset>
                        </div>
                    </div>
                    {% endif %}

                    <div class="hide">
                        {{ form_rest(form) }}
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
{% endblock content %}
