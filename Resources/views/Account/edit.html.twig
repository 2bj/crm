{% extends 'OroAccountBundle::layout.html.twig' %}
{% import 'OroUserBundle::macros.html.twig' as macros %}
{% form_theme form with 'OroUIBundle:Form:fields.html.twig' %}
{% oro_title_set({params : {"%account.name%": form.vars.value.name|default('N/A')} }) %}

{% block head_script %}
    {{ parent() }}

    {% javascripts
    '@OroUIBundle/Resources/public/lib/bootstrap/js/bootstrap-scrollspy.js'
    '@OroUIBundle/Resources/public/lib/backbone.bootstrap-modal.js'

    filter='?yui_js'
    output='js/oro.account.account.js'
    %}
    <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}

    {% include 'OroAccountBundle:Account:remove.confirm.js.twig' %}

{% endblock %}

{% block content %}
    <div class="container-fluid">
    <form action="{{ form.vars.value.id ? path('oro_account_edit', { id: form.vars.value.id, back: app.request.get('back') }) : path('oro_account_create', { back: app.request.get('back') }) }}" {{ form_enctype(form) }} method="post">
        <div class="navigation clearfix navbar-extra navbar-extra-right">
            <div class="row">
                {% if form.vars.value.id %}
                    <div class="pull-right">
                        <div class="btn-group icons-holder">
                            {% if resource_granted('oro_account_account_remove') %}
                                <a href="{{ path('oro_account_remove', { id: form.vars.value.id }) }}" id="remove-btn" class="btn"><i class="icon-trash hide-text">{{ 'Remove'|trans }}</i></a>
                            {% endif %}
                        </div>
                    </div>
                    <div class="pull-left">
                        <div class="customer-info well-small">
                            <div class="customer-content">
                                <div class="sub-title">{{ 'Account'|trans }}</div>
                                <h1 class="usser-name">{{ form.vars.value.name|default('N/A') }}</h1>
                                <ul class="inline">
                                    <li>{{ 'Created'|trans }}: {{ form.vars.value.createdAt ? macros.time(form.vars.value.createdAt) : 'N/A' }}</li>
                                    <li>{{ 'Updated'|trans }}: {{ form.vars.value.updatedAt ? macros.time(form.vars.value.updatedAt) : 'N/A' }}</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="pull-left">
                        <div class="customer-info well-small">
                            <div class="customer-content">
                                <h1 class="usser-name">{{ form.vars.value.id ? 'Edit Account' : 'New Account' }}</h1>
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
        <div class="layout-content">
            <div id="navbarExample" class="navbar navbar-static scrollspy-nav">
                <div class="navbar-inner">
                    <div class="container-fluid" style="width: auto;">
                        <ul class="nav">
                            <li class="active"><a href="#scroll-main">{{ 'Overview'|trans }}</a></li>
                            {% if form.attributes is defined %}
                                <li><a href="#scroll-attributes">{{ 'Additional data'|trans }}</a></li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </div>
            <div class="clearfix-oro">
                <div class="customer-info-actions container-fluid well-small">
                    <div class="pull-right">
                        <a href="{{ app.request.get('back') ? app.request.get('back') : path('oro_account_index') }}" class="btn">{{ 'Cancel'|trans }}</a>
                        <button type="submit" class="btn btn-primary">{{ 'Save'|trans }}</button>
                    </div>
                    {% if form_errors(form) %}
                        <div class="pull-left alert alert-error">
                            <button class="close" type="button" data-dismiss="alert">Ã—</button>
                            {{ form_errors(form) }}
                        </div>
                    {% endif %}
                </div>
                <div data-spy="scroll" data-target="#navbarExample" data-offset="50" class="scrollspy container-fluid">
                    <h4 id="scroll-main" class="scrollspy-title">{{ 'Overview'|trans }}</h4>
                    <div class="row-fluid">
                        <fieldset class="form-horizontal span6">
                            {{ form_row(form.name) }}
                        </fieldset>
                    </div>

                    {% if form.attributes is defined %}
                        <h4 id="scroll-attributes" class="scrollspy-title">{{ 'Additional data'|trans }}</h4>
                        <div class="row-fluid">
                            <fieldset class="form-horizontal" id="attributes-list">
                                {{ form_row(form.attributes) }}
                            </fieldset>
                        </div>
                    {% endif %}

                    <div class="hide">
                        {{ form_rest(form) }}
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
{% endblock content %}
